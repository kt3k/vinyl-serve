{
  "name": "vinyl-serve",
  "version": "3.0.0",
  "description": "Serves the vinyl stream directly",
  "main": "lib/index.js",
  "files": [
    "lib",
    "assets"
  ],
  "dependencies": {
    "connect": "^3.6.6",
    "es6-promise": "^4.0.3",
    "mime": "^2.3.1",
    "moment": "^2.15.1",
    "through2": "^2.0.1"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "chai": "^4.0.0",
    "codecov": "^3.0.2",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.4",
    "standard": "^12.0.0",
    "superagent": "^3.1.0",
    "through": "^2.3.8",
    "vinyl-fs": "^3.0.3"
  },
  "scripts": {
    "test": "_mocha spec/",
    "test-serve": "node test.js",
    "cov": "nyc --reporter=lcov _mocha spec/",
    "cov-open": "npm run cov && open coverage/lcov-report/index.html",
    "codecov": "npm run cov && codecov",
    "lint": "standard",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/vinyl-serve.git"
  },
  "keywords": [
    "vinyl",
    "stream",
    "server"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/vinyl-serve/issues"
  },
  "homepage": "https://github.com/kt3k/vinyl-serve#readme",
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "exclude": [
      "index.js",
      "node_modules/",
      "spec/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --single-quote --write",
      "standard --fix",
      "git add"
    ]
  }
}
